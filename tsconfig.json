{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2016"
    ],
    "outDir": "./dist/webpack_bundles/js/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "api/static/scripts/js/types"
    ],
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "api/static/scripts/js/**/*.ts*",
    "api/static/scripts/js/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}